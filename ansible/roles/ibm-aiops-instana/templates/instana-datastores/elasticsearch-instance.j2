apiVersion: elasticsearch.k8s.elastic.co/v1
kind: Elasticsearch
metadata:
  name: instana
spec:
  version: 7.17.20
  image: artifact-public.instana.io/self-hosted-images/3rd-party/datastore/elasticsearch:7.17.20_v0.9.0
  nodeSets:
    - name: default
      count: 1
      config:
        node.master: true
        node.data: true
        node.ingest: true
        node.store.allow_mmap: false
      podTemplate:
        spec:
          imagePullSecrets:
            - name: instana-registry
          # Add the following securityContext snippet for Kubernetes offerings other than OCP.
          # securityContext:
          #   fsGroup: 1000
          #   runAsGroup: 1000
          #   runAsUser: 1000
      volumeClaimTemplates:
        - metadata:
            name: elasticsearch-data # Do not change this name unless you set up a volume mount for the data path.
          spec:
            storageClassName: {{ AIOPS_STORAGE_CLASS_LARGE_BLOCK }}
            accessModes:
              - ReadWriteOnce
            resources:
              requests:
                storage: 20Gi
  http:
    tls:
      selfSignedCertificate:
        disabled: true