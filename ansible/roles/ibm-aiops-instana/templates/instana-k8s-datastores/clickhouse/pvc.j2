apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: clickhouse-logs
spec:
  accessModes:
  - ReadWriteOnce
  resources:
    requests:
      storage: 200Gi
  storageClassName: {{ AIOPS_STORAGE_CLASS_LARGE_BLOCK }}
  volumeMode: Filesystem
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: clickhouse-data
spec:
  accessModes:
  - ReadWriteOnce
  resources:
    requests:
      storage: 50Gi
  storageClassName: {{ AIOPS_STORAGE_CLASS_LARGE_BLOCK }}
  volumeMode: Filesystem
